<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TranslatorFragment">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_layout"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="120dp"
        android:hint="@string/text"
        android:selectAllOnFocus="true"
        app:errorEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:maxLines="4" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/morse_layout"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:hint="@string/morse"
        android:selectAllOnFocus="true"
        app:errorEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_layout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/morse_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:maxLines="4" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/clear_btn"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_high"
        android:background="@drawable/button_shape"
        android:text="@string/clear"
        android:layout_marginTop="60dp"
        android:textSize="16sp"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="@id/morse_layout"
        app:layout_constraintTop_toBottomOf="@id/morse_layout"

        app:layout_constraintVertical_bias="0.2" />

    <Button
        android:id="@+id/guide_btn"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_high"
        android:background="@drawable/button_shape"
        android:text="@string/guide"
        android:textSize="16sp"
        app:backgroundTint="@null"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/morse_layout"
        app:layout_constraintEnd_toEndOf="@id/morse_layout"

        app:layout_constraintVertical_bias="0.2" />






</androidx.constraintlayout.widget.ConstraintLayout>